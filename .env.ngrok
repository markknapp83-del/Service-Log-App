# Healthcare Portal - ngrok Demo Configuration
# Copy this to .env when using ngrok for demos

NODE_ENV=development
PORT=3001

# Database paths (use local paths for demo)
DB_PATH=./backend/database/healthcare.db
AUDIT_DB_PATH=./backend/database/audit.db

# JWT Secrets (demo keys - NOT for production)
JWT_SECRET=demo-jwt-secret-key-for-ngrok-testing-only-not-secure
JWT_REFRESH_SECRET=demo-refresh-secret-key-for-ngrok-testing-only-not-secure

# CORS - ngrok domains are now automatically allowed
CORS_ORIGIN=http://localhost:3005,https://localhost:3005

# Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Rate limiting (more permissive for demo)
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000
AUTH_RATE_LIMIT_MAX=50
AUTH_RATE_LIMIT_WINDOW=900000

# Demo settings
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=7200
BACKUP_RETENTION_DAYS=7
ENABLE_DEMO_MODE=true

# File upload settings
MAX_FILE_SIZE=10485760
MAX_REQUEST_SIZE=10mb
UPLOAD_PATH=./backend/uploads
TEMP_PATH=./backend/temp
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png
MAX_FILES_PER_REQUEST=5

# HIPAA Compliance (minimal for demo)
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=30
ENABLE_PHI_LOGGING=false
ENABLE_DATA_MASKING=true